<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <dl class="dl-horizontal">
    <dt>Username:</dt>
    <dd> <%= @user.username %> </dd>
    <dt>Phone:</dt>
    <dd> <%= @user.phone %> </dd>
    <dt>Timezone:</dt>
    <dd><%= @user.timezone %></dd>
  </dl>
</div>

<h5> <%= @user.username %>'s Activity </h5>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Post (#{@user.posts.size})", user_path(@user) %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments' ) %>
  </li>
</ul>

<% if params[:tab].nil? %>
  <% posts = @user.posts.all.sort_by{|x| x.total_votes}.reverse %>
  <% posts.each do |post| %>
    <%= render 'posts/post', post: post %>
  <% end %>
<% else %>
  <% comments = @user.comments.all.sort_by{|x| x.total_votes}.reverse %>
  <% comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment, show_post: true %>
  <% end %>
<% end %>
